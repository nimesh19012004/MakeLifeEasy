{
  "manifest_version": 3,
  "name": "Make Life Easy",
  "version": "1.0",
  "description": "Store details in topic and description format",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./images/logo.png"
  },
  "icons": {
    "128": "./images/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
